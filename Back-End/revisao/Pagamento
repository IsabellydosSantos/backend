        <label for="product">Selecione o produto</label>
        <select name="product" id="product">
            <option value="" disabled selected>Selecione</option>
            <option value="camiseta">Camiseta</option>
            <option value="botton">Botton</option>
            <option value="copo">Copo</option>
            <option value="chaveiro">Chaveiro</option>
        </select>
        <br><br> 

<label for="pagam">Insira o valor: </label>
        <input type="text" placeholder="Insira i calor em R$" id="pagam" name="pagam" required>
        <br><br>

        

        <button type="button" onclick="vender()">Vender</button>
        
        <br>


    

    <script>
        
        function comprar() {
            var saida = ''

            var select = document.getElementById('product').value
            var pagam = document.getElementById('pagam').value

            if(select == 'camiseta'){
               if(pagam == '30'){
                alert(`pagamenti efetuado com sucesso`)
               if(pagam < '30'){
                alert(`a venda nao foi concluida. valores informados sao insuficiente`)
               if(pagam > '30'){
                troco = pagam - 30
                alert(`pagamento efetuado com sucesso. seu troco é ${troco}`)
            }

            else if(select == 'botton'){
                if(pagam == '8'){
                alert(`pagamenti efetuado com sucesso`)
               if(pagam < '8'){
                alert(`a venda nao foi concluida. valores informados sao insuficiente`)
               if(pagam > '8'){
                troco = pagam - 8
                alert(`pagamento efetuado com sucesso. seu troco é ${troco}`)
            }

            else if(select == 'copo'){
                if(pagam == '35'){
                alert(`pagamenti efetuado com sucesso`)
               if(pagam < '35'){
                alert(`a venda nao foi concluida. valores informados sao insuficiente`)
               if(pagam > '35'){
                troco = pagam - 35
                alert(`pagamento efetuado com sucesso. seu troco é ${troco}`)
            }

            else if(select == 'chaveiro'){
                if(pagam == '15'){
                alert(`pagamenti efetuado com sucesso`)
               if(pagam < '15'){
                alert(`a venda nao foi concluida. valores informados sao insuficiente`)
               if(pagam > '15'){
                troco = pagam - 15
                alert(`pagamento efetuado com sucesso. seu troco é ${troco}`)
            }

            
        }
    </script>
